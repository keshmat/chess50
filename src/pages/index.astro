---
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";

// Import all logo images
import eddyLogo from "../assets/logos/eddy-logo.png";
import madiLogo from "../assets/logos/madi-logo.png";
import webrandLogo from "../assets/logos/webrand-logo.png";
import farraLogo from "../assets/logos/farra-logo.png";
import upsLogo from "../assets/logos/ups-logo.png";
import beirutingLogo from "../assets/logos/beiruting-logo.jpeg";
import giantsLogo from "../assets/logos/giants-logo.png";
import eiLogo from "../assets/logos/ei-logo.png";
---

<Layout title="50th Lebanese Chess Championship">
  <Header />
  <main>
    <div
      class="hero min-h-[600px]"
      style="background-image: url(/chess-background.jpg);"
    >
      <div class="hero-overlay bg-opacity-60"></div>
      <div class="hero-content text-center text-neutral-content">
        <div class="max-w-lg">
          <h1 class="hero-title mb-5">50th Lebanese Chess Championship</h1>
          <p
            class="mb-5 text-lg font-medium [text-shadow:1px_1px_3px_rgba(0,0,0,0.7)]"
          >
            Celebrating 50 years of the Lebanese National Championship, hosted
            by Keshmat Chess Center.
          </p>
        </div>
      </div>
    </div>

    <div class="container mx-auto p-8 space-y-16">
      <section id="watch" class="text-center">
        <h2 class="section-title mb-6">View The Live Games</h2>
        <p class="text-lg mb-6">
          Join us at Keshmat Chess Center in Dekwaneh to watch the tournament
          and listen to live commentary by expert players.
          <span class="text-lg font-semibold"
            >There will be live commentary every day between <strong
              >6:30 PM</strong
            > and <strong>9:00 PM</strong>.</span
          >
        </p>
        <div
          id="map"
          class="w-full h-96 mt-8 rounded-lg shadow-xl border-2 border-primary/20"
        >
        </div>
        <a
          href="https://maps.app.goo.gl/J72QDKmBHZdzq1WW8"
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-primary mt-4"
        >
          Get Directions
        </a>
      </section>

      <script>
        import maplibregl from "maplibre-gl";

        const keshmatLocation: [number, number] = [35.54685505128131, 33.8665]; // [lng, lat]

        const map = new maplibregl.Map({
          container: "map",
          style: "https://tiles.openfreemap.org/styles/bright",
          center: keshmatLocation,
          zoom: 15,
        });

        new maplibregl.Marker().setLngLat(keshmatLocation).addTo(map);

        map.addControl(new maplibregl.NavigationControl());
      </script>

      <section id="tournament-schedule" class="my-16">
        <h2 class="section-title mb-6 text-center">Tournament Schedule</h2>
        <div class="overflow-x-auto">
          <table class="min-w-full border border-gray-300 text-center bg-white">
            <thead class="bg-gray-100">
              <tr>
                <th class="py-2 px-3 border">Day</th>
                <th class="py-2 px-3 border">Date</th>
                <th class="py-2 px-3 border">Event</th>
                <th class="py-2 px-3 border">Time</th>
              </tr>
            </thead>
            <tbody>
              <tr class="bg-yellow-200 font-bold">
                <td class="border px-3 py-2">Friday</td>
                <td class="border px-3 py-2">20-6-2025</td>
                <td class="border px-3 py-2">Technical Meeting</td>
                <td class="border px-3 py-2">5:30 PM</td>
              </tr>
              <tr>
                <td class="border px-3 py-2">Saturday</td>
                <td class="border px-3 py-2">21-6-2025</td>
                <td class="border px-3 py-2">Round 1</td>
                <td class="border px-3 py-2">5:30 PM</td>
              </tr>
              <tr>
                <td class="border px-3 py-2">Sunday</td>
                <td class="border px-3 py-2">22-6-2025</td>
                <td class="border px-3 py-2">Round 2</td>
                <td class="border px-3 py-2">5:30 PM</td>
              </tr>
              <tr>
                <td class="border px-3 py-2">Monday</td>
                <td class="border px-3 py-2">23-6-2025</td>
                <td class="border px-3 py-2">Round 3</td>
                <td class="border px-3 py-2">5:30 PM</td>
              </tr>
              <tr class="bg-yellow-100 font-bold">
                <td class="border px-3 py-2">Tuesday</td>
                <td class="border px-3 py-2">24-6-2025</td>
                <td class="border px-3 py-2" colspan="2">Rest Day</td>
              </tr>
              <tr>
                <td class="border px-3 py-2">Wednesday</td>
                <td class="border px-3 py-2">25-6-2025</td>
                <td class="border px-3 py-2">Round 4</td>
                <td class="border px-3 py-2">5:30 PM</td>
              </tr>
              <tr>
                <td class="border px-3 py-2">Thursday</td>
                <td class="border px-3 py-2">26-6-2025</td>
                <td class="border px-3 py-2">Round 5</td>
                <td class="border px-3 py-2">5:30 PM</td>
              </tr>
              <tr>
                <td class="border px-3 py-2">Friday</td>
                <td class="border px-3 py-2">27-6-2025</td>
                <td class="border px-3 py-2">Round 6</td>
                <td class="border px-3 py-2">5:30 PM</td>
              </tr>
              <tr class="bg-yellow-100 font-bold">
                <td class="border px-3 py-2">Saturday</td>
                <td class="border px-3 py-2">28-6-2025</td>
                <td class="border px-3 py-2" colspan="2">Rest Day</td>
              </tr>
              <tr>
                <td class="border px-3 py-2">Sunday</td>
                <td class="border px-3 py-2">29-6-2025</td>
                <td class="border px-3 py-2">Round 7</td>
                <td class="border px-3 py-2">5:30 PM</td>
              </tr>
              <tr>
                <td class="border px-3 py-2">Monday</td>
                <td class="border px-3 py-2">30-6-2025</td>
                <td class="border px-3 py-2">Round 8</td>
                <td class="border px-3 py-2">5:30 PM</td>
              </tr>
              <tr>
                <td class="border px-3 py-2">Tuesday</td>
                <td class="border px-3 py-2">1-7-2025</td>
                <td class="border px-3 py-2">Round 9 + Closing Ceremony</td>
                <td class="border px-3 py-2">5:30 PM</td>
              </tr>
              <tr class="bg-gray-200 font-bold">
                <td class="border px-3 py-2">Wednesday</td>
                <td class="border px-3 py-2">2-7-2025</td>
                <td class="border px-3 py-2"
                  >[if needed] Tiebreaks + Closing Ceremony</td
                >
                <td class="border px-3 py-2">5:30 PM</td>
              </tr>
            </tbody>
          </table>
        </div>
      </section>

      <section>
        <h3 class="section-title text-center mb-6">Live Top Boards</h3>
        <div class="aspect-w-4 aspect-h-3 relative">
          <iframe
            src="https://lichess.org/embed/broadcast/50th-lebanese-individual-chess-championship-2025/QfMCQQRd"
            style="width: 100%; aspect-ratio: 4/3;"
            frameborder="0"></iframe>
        </div>
        <p class="text-center mt-4 text-sm text-gray-600 font-medium">
          Live positions from the top board are broadcast daily.
        </p>
      </section>

      <div class="grid md:grid-cols-2 gap-8">
        <section
          id="history"
          class="sponsor-card p-8 chess-decoration flex flex-col"
        >
          <h2 class="subsection-title mb-4">A Rich History</h2>
          <p class="text-gray-700 leading-relaxed flex-grow">
            In 2025, the Lebanese Chess Federation will celebrate the 50th
            anniversary of the Lebanese National Championship. We have created a
            small museum of the past 50 years of Lebanese Chess to mark this
            occasion. Explore our digital archive of historical moments.
          </p>
          <a href="/history" class="btn btn-primary mt-4 self-end"
            >View History Gallery</a
          >
        </section>

        <section
          id="about"
          class="sponsor-card p-8 chess-decoration flex flex-col"
        >
          <h2 class="subsection-title mb-4">About Keshmat</h2>
          <p class="text-gray-700 leading-relaxed flex-grow">
            Keshmat Chess Center has been operating since 2021 and has hosted
            the Lebanese Chess Championship for the past 4 years. Our staff
            includes experienced international arbiters, trainers, and former
            Lebanese champions.
          </p>
          <a href="/about" class="btn btn-primary mt-4 self-end">Learn More</a>
        </section>
      </div>

      <section class="text-center">
        <h2 class="section-title mb-8">Our Valued Sponsors</h2>

        <!-- Tier 1: Premium Sponsors -->
        <div class="mb-8">
          <h3 class="text-lg font-semibold text-gray-700 mb-4">
            Premium Sponsors
          </h3>
          <div class="flex justify-center items-center gap-8 flex-wrap">
            <div class="sponsor-card p-4 rounded-lg">
              <a
                href="https://www.ups.com/"
                target="_blank"
                rel="noopener noreferrer"
                class="block hover:opacity-80 transition-opacity"
              >
                <Image
                  src={upsLogo}
                  alt="UPS Logo"
                  width={300}
                  class="h-20 max-w-[300px] object-contain"
                />
              </a>
            </div>
            <div class="sponsor-card p-4 rounded-lg">
              <a
                href="https://www.farra.com/"
                target="_blank"
                rel="noopener noreferrer"
                class="block hover:opacity-80 transition-opacity"
              >
                <Image
                  src={farraLogo}
                  alt="Farra Logo"
                  width={300}
                  class="h-20 max-w-[300px] object-contain"
                />
              </a>
            </div>
          </div>
        </div>

        <!-- Tier 2: Major Sponsors -->
        <div class="mb-8">
          <h3 class="text-lg font-semibold text-gray-700 mb-4">
            Major Sponsors
          </h3>
          <div class="flex justify-center items-center gap-8 flex-wrap">
            <div class="sponsor-card p-4 rounded-lg">
              <a
                href="https://www.google.com/maps?q=33.9796286,35.6159059"
                target="_blank"
                rel="noopener noreferrer"
                class="block hover:opacity-80 transition-opacity"
              >
                <Image
                  src={eiLogo}
                  alt="EI Logo"
                  width={250}
                  class="h-18 max-w-[250px] object-contain"
                />
              </a>
            </div>
            <div class="sponsor-card p-4 rounded-lg">
              <a
                href="https://beiruting.com/"
                target="_blank"
                rel="noopener noreferrer"
                class="block hover:opacity-80 transition-opacity"
              >
                <Image
                  src={beirutingLogo}
                  alt="Beiruting Logo"
                  width={250}
                  class="h-18 max-w-[250px] object-contain"
                />
              </a>
            </div>
            <div class="sponsor-card p-4 rounded-lg">
              <a
                href="https://www.instagram.com/librairiemadi/"
                target="_blank"
                rel="noopener noreferrer"
                class="block hover:opacity-80 transition-opacity"
              >
                <Image
                  src={madiLogo}
                  alt="Madi Logo"
                  width={250}
                  class="h-18 max-w-[250px] object-contain"
                />
              </a>
            </div>
            <div class="sponsor-card p-4 rounded-lg">
              <a
                href="https://www.instagram.com/webrandlb/"
                target="_blank"
                rel="noopener noreferrer"
                class="block hover:opacity-80 transition-opacity"
              >
                <Image
                  src={webrandLogo}
                  alt="Webrand Logo"
                  width={250}
                  class="h-18 max-w-[250px] object-contain"
                />
              </a>
            </div>
          </div>
        </div>

        <!-- Tier 3: Supporting Sponsors -->
        <div>
          <h3 class="text-lg font-semibold text-gray-700 mb-4">
            Supporting Sponsors
          </h3>
          <div class="flex justify-center items-center gap-8 flex-wrap">
            <div class="sponsor-card p-4 rounded-lg">
              <a
                href="https://www.metlife.com.lb/"
                target="_blank"
                rel="noopener noreferrer"
                class="block hover:opacity-80 transition-opacity"
              >
                <Image
                  src={giantsLogo}
                  alt="Giants Logo"
                  width={200}
                  class="h-16 max-w-[200px] object-contain"
                />
              </a>
            </div>
            <div class="sponsor-card p-4 rounded-lg">
              <a
                href="https://www.instagram.com/eddy.abouzeid"
                target="_blank"
                rel="noopener noreferrer"
                class="block hover:opacity-80 transition-opacity"
              >
                <Image
                  src={eddyLogo}
                  alt="Eddy Logo"
                  width={200}
                  class="h-16 max-w-[200px] object-contain"
                />
              </a>
            </div>
          </div>
        </div>
      </section>
    </div>
  </main>
  <Footer />
</Layout>
